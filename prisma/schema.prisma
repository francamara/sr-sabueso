generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id             Int      @id @default(autoincrement())
  name           String
  description    String?
  weight         Float
  listPrice      Float
  retailPrice    Float
  stock          Int
  barcode        String?  @unique
  age            String?
  size           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  animalId       Int
  lineId         Int
  brandId        Int
  distributorId  Int
  factoryId      Int

  animal         Animal       @relation(fields: [animalId], references: [id])
  line           Line         @relation(fields: [lineId], references: [id])
  brand          Brand        @relation(fields: [brandId], references: [id])
  distributor    Distributor  @relation(fields: [distributorId], references: [id])
  factory        Factory      @relation(fields: [factoryId], references: [id])
}

model Animal {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Products[]
}

model Line {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Products[]
}

model Brand {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Products[]
}

model Distributor {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Products[]
}

model Factory {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Products[]
}
