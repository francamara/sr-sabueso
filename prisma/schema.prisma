generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String   // Product name
  description    String
  weight         Float    // Weight in kilos
  extraWeight    Float?   // Extra kilos if applicable
  stock          Int      // Available stock
  sold           Int      // Units sold
  retailPrice    Float    // Retail price
  barcodeNumber  Int
  uniqueCode     Int

  // Relationships
  brandId        Int
  animalId       Int

  brand          Brand    @relation(fields: [brandId], references: [id])
  animal         Animal   @relation(fields: [animalId], references: [id])
  distributors   ProductDistributor[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Brand {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
}

model Animal {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
}

model Distributor {
  id        Int                  @id @default(autoincrement())
  name      String               @unique
  products  ProductDistributor[]
}

model ProductDistributor {
  id            Int          @id @default(autoincrement())
  productId     Int
  distributorId Int

  stock         Int          // Stock available from this distributor
  price         Float        // Distributor's selling price

  distributor   Distributor @relation(fields: [distributorId], references: [id])
  product       Product      @relation(fields: [productId], references: [id])
}
